    <TextView
        android:id="@+id/du1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Zbyt mały, zbyt daleko"
        android:textColor="@color/brown"
        android:textSize="40sp"
        android:textStyle="italic"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic1"/>

    <TextView
        android:id="@+id/du2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Jeśli grzyby są skanowane ze zbyt dużej odległości, rozpoznawanie obrazu nie uzyska wystarczającej ilości szczegółów i wynik nie będzie miarodajny."
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/du1"/>

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/add_photo_24"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/du3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Zbyt mały, zbyt daleko"
        android:textColor="@color/brown"
        android:textSize="40sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/pic2"/>

    <TextView
        android:id="@+id/du4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Jeśli grzyby są skanowane ze zbyt dużej odległości, rozpoznawanie obrazu nie uzyska wystarczającej ilości szczegółów i wynik nie będzie miarodajny."
        android:textColor="@color/dark_gray"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/du3"/>

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/add_photo_24"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/du2"/>

</androidx.constraintlayout.widget.ConstraintLayout>